@model IEnumerable<MotivationMinders.Models.ProductImage>

@{
    ViewBag.Title = "Catalogue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Catalogue
                <small>of items</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->
    @{
        int counter = 0;
        foreach (var item in Model)
        {
            
            if (item.featured == true)
            {
                if (counter == 0)
                { 
                    @:<div class='row'>
                }
                if (counter < 3)
                {
                    <div class="col-md-4 img-portfolio">
                        <a href="@Url.Action("Product", "Home", new { id=item.productID })">
                            <img class="img-responsive img-hover" src="~/images/Products/@(item.filename).jpg" style="">
                        </a>
                        <h3>
                            <a href="@Url.Action("Product", "Home")">@(item.product.name)</a>
                        </h3>
                        <p>@(item.product.description)</p>
                    </div>
                    counter++;
                }
                if (counter == 3)
                {
                    @:</div>
                    counter = 0;
                }
            }
        }
    }
    <hr>
    @*<!-- Pagination -->
    <div class="row text-center">
        <div class="col-lg-12">
            <ul class="pagination">
                <li>
                    <a href="#">&laquo;</a>
