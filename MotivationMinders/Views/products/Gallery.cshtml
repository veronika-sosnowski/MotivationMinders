@model List<MotivationMinders.Models.ProductImage>

@{
    ViewBag.Title = "Gallery";
}

<h2>Gallery</h2>

<p>
    @Html.ActionLink("Upload New", "Upload");
</p>
<table>
    @{
        int j = 0;
        for (int i = 0; i < Model.Count(); i += 4)
        {
            j = i;
            <tr>
                @while (j < i + 4 && j < Model.Count())
                {
                    <td>
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model[j].image, 0, Model[j].image.Length)" width="100" />
                        
                    </td>
                    j++;
                }

            </tr>

        }

    }
</table> 