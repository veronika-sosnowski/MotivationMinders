@model IEnumerable<MotivationMinders.SystemUser>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @if (item.Role == 1)
                {
                    var role = "Member";
                    @Html.DisplayFor(modelItem => role)
                }
                else if (item.Role == 2)
                {
                    var role = "Admin";
                    @Html.DisplayFor(modelItem => role)
                }


            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.Email }) |
                @Html.ActionLink("Details", "Details", new { item.Email }) |
                @Html.ActionLink("Delete", "Delete", new { item.Email })
            </td>
        </tr>
    }

</table>